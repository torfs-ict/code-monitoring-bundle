{
    "name": "torfs-ict/code-monitoring-bundle",
    "description": "Code monitoring bundle for Symfony projects",
    "type": "symfony-bundle",
    "license": "proprietary",
    "authors": [
        {
            "name": "Kristof Torfs",
            "email": "kristof@torfs.org"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "TorfsICT\\CodeMonitoringBundle\\": "src/"
        }
    },
    "require": {
        "php": ">=8.2",
        "friendsofphp/php-cs-fixer": "^3.41",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-symfony": "^1.3",
        "phpro/grumphp-shim": "^2.3",
        "symfony/framework-bundle": "*",
        "symfony/flex": "^2.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.41",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-symfony": "^1.3",
        "phpro/grumphp-shim": "^2.3",
        "symfony/framework-bundle": "*",
        "torfs-ict/code-quality-pack": "^1.0",
        "symfony/dotenv": "*"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "phpro/grumphp-shim": true,
            "symfony/flex": true
        }
    },
    "extra": {
        "symfony": {
            "endpoint": [
                "https://api.github.com/repos/torfs-ict/symfony-flex-recipes/contents/index.json",
                "flex://defaults"
            ]
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
